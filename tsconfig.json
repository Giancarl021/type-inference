{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": ["ESNext"],
        "declaration": true,
        "outDir": "lib",
        "strict": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "forceConsistentCasingInFileNames": true
    },
    "include": ["index.ts", "src/**/*.ts"],
    "exclude": ["node_modules", "lib"]
}
